<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ntnu.master.nofall.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/btnStartProcess"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:onClick="OpenUserActivity"
        android:text="@string/btnStartRegTxt" />

    <Button
        android:id="@+id/btnHelp"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnStartProcess"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:onClick="OpenHelpActivity"
        android:text="@string/btnHelpTxt" />

    <Button
        android:id="@+id/btnTest"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnHelp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:onClick="OpenTUGActivity"
        android:text="TUG" />

    <Button
        android:id="@+id/btnSurvey"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnHelp"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_button"
        android:onClick="OpenSurveyActivity"
        android:text="Survey" />

</RelativeLayout>