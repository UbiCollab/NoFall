<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ntnu.master.nofall.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/fragment_main_btn_StartProcess"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:onClick="OpenUserActivity"
        android:text="@string/btnStartRegTxt" />

    <Button
        android:id="@+id/fragment_main_btn_Help"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_main_btn_StartProcess"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:onClick="OpenHelpActivity"
        android:text="@string/btnHelpTxt" />

    <Button
        android:id="@+id/fragment_main_btn_Test"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_main_btn_Help"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:onClick="OpenTUGActivity"
        android:text="TUG" />

    <Button
        android:id="@+id/fragment_main_btn_Survey"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragment_main_btn_Test"
        android:layout_below="@+id/btnXYPlot"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:onClick="OpenSurveyActivity"
        android:text="Survey" />

    <Button
        android:id="@+id/btnXYPlot"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fragment_main_btn_Test"
        android:layout_below="@+id/fragment_main_btn_Test"
        android:layout_marginTop="82dp"
        android:background="@drawable/custom_button"
        android:onClick="OpenXYPlotActivity"
        android:text="XYPlot" />

    <Button
        android:id="@+id/fragment_main_btn_Pedometer"
        style="@style/button_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragment_main_btn_Survey"
        android:layout_below="@+id/fragment_main_btn_Survey"
        android:layout_marginBottom="56dp"
        android:background="@drawable/custom_button"
        android:onClick="OpenPedometerActivity"
        android:text="Pedometer" />

</RelativeLayout>