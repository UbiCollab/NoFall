<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ntnu.master.nofall"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="ntnu.master.nofall.activity.UserOverviewActivity"
            android:label="@string/app_name" >

            <!--
                 <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="ntnu.master.nofall.activity.UserDetailActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>

        <provider
            android:name="ntnu.master.nofall.contentprovider.MyContentProvider"
            android:authorities="ntnu.master.nofall.contentprovider" >
        </provider>

        <receiver android:name="ntnu.master.nofall.widget.MyWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <activity
            android:name="ntnu.master.nofall.activity.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ntnu.master.nofall.activity.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="ntnu.master.nofall.activity.MedicationRegActivity"
            android:label="@string/title_activity_medication_reg" >
        </activity>
        <activity
            android:name="ntnu.master.nofall.activity.MedicationSelectActivity"
            android:label="@string/title_activity_medication_select" >
        </activity>
        <activity
            android:name="ntnu.master.nofall.activity.TUGActivity"
            android:label="@string/title_activity_tug_test" >
        </activity>
        <activity
            android:name="ntnu.master.nofall.activity.SurveyActivity"
            android:label="@string/title_activity_survey" >
        </activity>
        <activity
            android:name="ntnu.master.nofall.activity.XYPlotActivity"
            android:label="@string/title_activity_tug_test" >
        </activity>
    </application>

</manifest>